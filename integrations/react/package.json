{
  "name": "@stackflow/react",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn clean && concurrently \"yarn:build:*\"",
    "build:bundle:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "build:bundle:js": "node ./esbuild.config.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@stackflow/core": "workspace:^",
    "react-fast-compare": "^3.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "concurrently": "^7.2.1",
    "dts-bundle-generator": "^6.9.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
