{
  "name": "@stackflow/basic-ui",
  "version": "0.2.1",
  "license": "Apache-2.0",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./index.css": "./dist/index.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn build:js && yarn build:dts && yarn build:docs",
    "build:docs": "typedoc",
    "build:dts": "tsc --emitDeclarationOnly",
    "build:js": "node ./esbuild.config.js",
    "clean": "rimraf dist && rimraf docs",
    "dev": "yarn build:js --watch && yarn build:dts --watch"
  },
  "dependencies": {
    "@vanilla-extract/dynamic": "^2.0.2"
  },
  "devDependencies": {
    "@stackflow/core": "^0.2.0",
    "@stackflow/esbuild-config": "^0.2.0",
    "@stackflow/react": "^0.2.1",
    "@types/react": "^18.0.10",
    "@vanilla-extract/css": "^1.7.1",
    "@vanilla-extract/css-utils": "^0.1.2",
    "@vanilla-extract/recipes": "^0.2.5",
    "react": "^18.1.0",
    "rimraf": "^3.0.2",
    "typedoc": "^0.22.17",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@stackflow/core": "^0.1.0",
    "@stackflow/react": "^0.1.0",
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "ultra": {
    "concurrent": [
      "dev",
      "build"
    ]
  }
}
